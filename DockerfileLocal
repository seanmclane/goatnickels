FROM alpine
USER root
ARG CONFIG=""
ARG KEYSTORE=""
ARG USER=""
EXPOSE 3000
RUN mkdir -p /${USER}/.goatnickels/goatchain/
COPY ./goatnickels /
COPY ./docker/1 /${USER}/.goatnickels/goatchain/
COPY ${CONFIG} /${USER}/.goatnickels/config.json
COPY ${KEYSTORE} /${USER}/.goatnickels/keystore.json
CMD ["/goatnickels", "-serve", "y"]